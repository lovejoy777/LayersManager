<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">#673AB7</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">#512DA8</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">#EC407A</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="DarkTheme" parent="android:Theme.Material">
        <!-- Customize your theme here. -->
        <item name="android:buttonStyle">@style/ButtonDark</item>
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">#673AB7</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">#512DA8</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">#EC407A</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="LightTheme" parent="android:Theme.Material">
        <item name="android:buttonStyle">@style/ButtonLight</item>
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">#673AB7</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">#512DA8</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">#EC407A</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="ButtonDark" parent="@android:style/Widget.Material.Button">
        <!-- <item name="android:textColor">#ffffff</item> only way to change this is to change the src image
         <item name="android:background">#1D1D1D</item>-->
        <item name="android:background">@drawable/button_appirator</item>
        <item name="android:textColor">#000</item>

    </style>

    <style name="ButtonLight" parent="@android:style/Widget.Material.Button">
        <!-- <item name="android:textColor">#ffffff</item> only way to change this is to change the src image
        <item name="android:background">@color/main</item>-->

        <item name="android:textColor">#000</item>

    </style>

    <!-- App rater styles -->
    <style name="appiratorButton" parent="android:Widget.Material.Button">

        <item name="android:textColor">@color/appirator_button_text_color</item>
    </style>

    <!-- Button styles -->
    <style name="Button" parent="android:Widget.Material.Button">

        <item name="android:textColor">#ffffff</item>
    </style>

</resources>
