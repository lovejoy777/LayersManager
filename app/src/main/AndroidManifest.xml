<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.lovejoy777.rroandlayersmanager">

    <uses-permission
        android:name="android.permission.ACCESS_SUPERUSER" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.ACCESS_ALL_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_MEDIA_STORAGE"
        tools:ignore="ProtectedPermissions" />


    <application

        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/LightTheme" >

        <activity
            android:name=".menu"
            android:label="@string/app_name"
            android:icon="@drawable/layers" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Layers"
            android:label="@string/app_name"
            android:icon="@drawable/layers"
            android:parentActivityName="com.lovejoy777.rroandlayersmanager.menu" >
            <intent-filter>
                <action android:name="com.lovejoy777.rroandlayersmanager.LAYERS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LayersChooser"
            android:label="@string/app_name"
            android:icon="@drawable/layers"
            android:parentActivityName="com.lovejoy777.rroandlayersmanager.Layers">
            <intent-filter>
                <action android:name="com.lovejoy777.rroandlayersmanager.LAYERSCHOOSER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.lovejoy777.rroandlayersmanager.DeleteLayersChooser"
            android:label="@string/app_name"
            android:icon="@drawable/layers"
            android:parentActivityName="com.lovejoy777.rroandlayersmanager.Layers">
            <intent-filter>
                <action android:name="com.lovejoy777.rroandlayersmanager.DELETELAYERSCHOOSER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".WaitLayers"
            android:label="@string/app_name"
            android:icon="@drawable/layers" >
            <intent-filter>
                <action android:name="com.lovejoy777.rroandlayersmanager.WAITLAYERS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.lovejoy777.rroandlayersmanager.Settings"
            android:label="Settings"
            android:icon="@drawable/layers" >
            <intent-filter>
                <action android:name="android.intent.action.SETTINGS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.lovejoy777.rroandlayersmanager.Instructions"
            android:label="Instructions"
            android:icon="@drawable/layers"
            android:parentActivityName="com.lovejoy777.rroandlayersmanager.menu">
            <intent-filter>
                <action android:name="android.intent.action.INSTRUCTIONS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.lovejoy777.rroandlayersmanager.About"
            android:label="About"
            android:icon="@drawable/layers"
            android:parentActivityName="com.lovejoy777.rroandlayersmanager.menu">
            <intent-filter>
                <action android:name="android.intent.action.ABOUT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.lovejoy777.rroandlayersmanager.ChangeLog"
            android:label="ChangeLog"
            android:icon="@drawable/layers"
            android:parentActivityName="com.lovejoy777.rroandlayersmanager.menu">
            <intent-filter>
                <action android:name="android.intent.action.CHANGELOG" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.lovejoy777.rroandlayersmanager.PlaystoreSuperUser"
            android:label="@string/app_name"
            android:icon="@drawable/layers"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.sion.lovejoy777sa.sion.PLAYSU" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>
